<%- include('partials/header') %>

<div class="jumbotron centred">
  <h1>Employee dashboard</h1>

<p>Welcome <%=name %> </p>

<h2>Assign task</h2>
  <div class="dropdown">
    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">View Clients
    <span class="caret"></span></button>
    <ul class="dropdown-menu">
      <input class="form-control" id="myInput" type="text" placeholder="Search..">

      <% for(var i=0; i<arr.length; i++ ){ %>
          <li>

            <a href="/clients/<%= arr[i]._id %>" > <%= arr[i].companyName %> </a>
          </li>


    <%  } %>

    </ul>
  </div>
</div>

<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $(".dropdown-menu li").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>

<a href="/register-client"><h2>Register a client</h2></a>



