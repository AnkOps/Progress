<%- include('partials/clientHeader') %>
<div class="row client-main-container">
  <div class="col-md-5">
    <div class="card">
      <div class="card-header">
        <h3>Edit Info:</h3>
      </div>
      <div class="card-body">
        <form  action="/editEmpInfo" method="POST">

          <div class="form-group">
            <input type="hidden" id="empId" name="empId" value="<%=emp._id%>">

            <label for="employeeName">First Name:</label>
            <input type="text" class="form-control" name="firstname" id="firstname" required value="<%=emp.firstname%>">

            <label for="employeeName">Last Name:</label>
            <input type="text" class="form-control" name="lastname" id="lastname" required value="<%=emp.lastname%>">

            <label for="employeeName">Contact Number:</label>
            <input type="text" class="form-control" name="contactNumber" id="contactNumber" required value="<%=emp.contactNumber%>">

            <label for="employeeName">Aadhar Number:</label>
            <input type="text" class="form-control" name="aadharNumber" id="aadharNumber" required value="<%=emp.aadharNumber%>">

            <label for="employeeName">Address:</label>
            <input type="text" class="form-control" name="address" id="address" required value="<%=emp.address%>">

            <label for="employeeName">City:</label>
            <input type="text" class="form-control" name="city" id="city" required value="<%=emp.city%>">

            <label for="employeeName">State:</label>
            <input type="text" class="form-control" name="state" id="state" required value="<%=emp.state%>">



            <div class="form-group">
              <p>
                <input class="btn btn-dark" type="reset" value="Reset all">
                <input class="btn btn-dark" type="submit" value="Submit">
              </p>
            </div>

          </div>


        </form>
      </div>
    </div>
  </div>
  </div>
  <%- include('partials/footer') %>
